{
	"tabWidth": 4,
	"useTabs": true,
	"singleQuote": true,
	"bracketSpacing": true,
	"trailingComma": "es5",
	"semi": true,
	"arrowParens": "avoid",
	"printWidth": 180,
	"[javascript]": {
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true,
		"source.fixAll.tslint": true,
		"source.fixAll.stylelint": true
	}
	}
}
